<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/entity_title"
        tools:text="Title"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:textColor="@color/textcolor_white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:ellipsize="end"/>


    <ImageView
        android:layout_width="36dp"
        android:id="@+id/play"
        app:srcCompat="@drawable/ic_chevron_right"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.43"
        android:layout_height="36dp" />

    <TextView
        android:text="2 songs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/total_song"
        app:layout_constraintLeft_toLeftOf="@+id/entity_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/textcolor_white" />

    <TextView
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/total_song"
        app:layout_constraintTop_toTopOf="@+id/total_song"/>

    <TextView
        android:text="album"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/entity_album"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintRight_toLeftOf="@+id/play"
        android:layout_marginEnd="8dp"
        android:textColor="@color/textcolor_white"
        android:ellipsize="end"/>

</android.support.constraint.ConstraintLayout>